            {
                RedStream.Graphics.mode = RsGraphics.Mode.Wireframe;
                RedStream.Graphics.FinalMap = RedStream.Graphics.DiffuseMap;
            }

            if (Tapped(KeyBindings.ActivateParticles))
                Particles.bActive = !Particles.bActive;
