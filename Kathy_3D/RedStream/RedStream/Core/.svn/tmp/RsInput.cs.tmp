            if (Tapped(KeyBindings.SelectPreviousRing))
                Gyroscope.SelectPreviousRing();
            
            if (Down(KeyBindings.RotateRingRight))
                Gyroscope.RotateRing(3.0f);
            
            if (Down(KeyBindings.RotateRingLeft))
                Gyroscope.RotateRing(-3.0f);
            
            if (Tapped(KeyBindings.ToggleGyro))
                Gyroscope.ToggleMode();
            
            if (Tapped(KeyBindings.DrawScene))
                bDrawScene = !bDrawScene;
        }
        public static bool Down(Keys key)
        {
            return CurrentKeyState.IsKeyDown(key);
        }
        public static bool Tapped(Keys key)
        {
            return CurrentKeyState.IsKeyDown(key) && !LastKeyState.IsKeyDown(key);
        }
    }
